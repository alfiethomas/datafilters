/*
============
HANDSET LIST
============
*/
h1 { margin-bottom: 0; }
#sortBy { margin-bottom: 20px; }
#sortBy select {
	font-family: Verdana, sans-serif;
	font-size: 1.2em;
	color: #2c2c2c;
}
#handsetList {
	margin: 0;
	padding: 0;
	list-style: none;
}
#handsetList a img  {
	margin: 0 15px 5px;
	padding-bottom: 8px;
	background: url(../images/handset-shadow.png) no-repeat center bottom;
	_background: none;
}
ul#handsetList {
	margin-left: 0;
	padding-left: 0;
}
#handsetList li {
	margin: 0 2px 30px 2px;
	padding-top: 10px;
	padding-bottom: 10px;
	display: inline-block;
	vertical-align: top;
    /* *display: inline; */
	*float: left; /* display inline suddenly stopped working for some reason */
	border: 1px #fff solid;
	width: 232px;
}
#handsetList li.promoted {
	background: #f2faff url(../images/promo-handset-bg.jpg) repeat-x left top;
	border: 1px #f5f5f5 solid;
	border-bottom: 1px #e1e1e1 solid;
	border-top: 1px #d4e6f0 solid;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
	-webkit-box-shadow: 0px 2px 2px 0px #e1e1e1;
	box-shadow: 0px 2px 2px 0px #e1e1e1;
}
.handset-details-wrapper { margin: 0 5px; }
.handset-details-wrapper p { margin: 0 !important; }
#handsetList h3 span.brand,
#handsetList h3 span.model {
	display: inline-block;
	width: 100%;	
}
.handset-name span.model { margin-bottom: 10px; }
.handset-details a {
	font-weight: bold;
	line-height: 1.2;
	margin: 0 3px 0 0 !important;
}
.handset-cost { line-height: 1.2; }
.handset-cost span {
	color: #007876;
	font-weight: bold;
}
.handset-details-wrapper input {
	float: none !important;
	margin: 0 !important;
}
#handsetList a.btn-style { 
	float: none;
	margin: 0 !important;
}
p.pay-go,
p.pay-mo {
	font-size: 0.916em;
	line-height: 1.25em;
	margin-bottom: 10px !important;
}
p.pay-go span,
p.pay-mo span {
	display: block;
	color: #017F7D;
	font-weight: bold;
}
span.outOfStock { color: #ae2328 !important; }
span.delayedDelivery { color: #ff7e00 !important; }
span.unavailable { color: #000 !important; }
/*
=======
SIGN IN
=======
*/
p.pageSignIn {
	text-align: right;
	margin-bottom: 30px;
}
p.pageSignIn a { font-weight: bold; }
p.pageSignIn span {
	background-color: #eef6fc;
	padding: 10px;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
}
/*
==========
PAGINATION
==========
*/
ul.pagination {
	list-style-type: none;
	margin: 3px 0 30px 0 !important; /* margin-top applied for ie 6 and 7 */
	text-align: right;
}
ul.pagination li {
	display: inline;
	padding: 0 0 0 12px;
	font-size: 1.1em;
}
ul.pagination li a {
	padding: 2px 5px;
	border: 1px solid #fff;
	text-decoration: none;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
}
ul.pagination li a:hover {
	background-color: #f5f5f5;
	border: 1px solid #e7e7e7;
	border-top: 1px solid #c1c1c1; 
	border-bottom: 1px solid #f5f5f5;
}
ul.pagination li.active a {
	color: #2c2c2c;
	background-color: #e5e5e5;
	border: 1px solid #d7d7d7;
	border-top: 1px solid #b1b1b1; 
	border-bottom: 1px solid #e5e5e5;
}
/* reset active hover */
ul.pagination li.active a:hover {
	background-color: #e5e5e5;
	border: 1px solid #d7d7d7;
	border-top: 1px solid #b1b1b1; 
	border-bottom: 1px solid #e5e5e5;
}
ul.pagination li.show a {
	font-weight: bold;
	background-color: transparent !important;
	border: none !important;
}
ul.pagination li.show a:hover {
	text-decoration: underline;
}