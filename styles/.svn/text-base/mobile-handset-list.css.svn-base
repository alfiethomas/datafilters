/*
============
HANDSET LIST
============
*/
#handsetList {
	list-style: none;
	overflow: hidden;
}
#handsetList li {
	display: block;
	_position: relative;
	margin-bottom: 10px;
	background: url("../images/row-shadow-left.jpg") no-repeat scroll bottom left transparent;
	zoom: 1;
}
#handsetList li.last {
	margin-bottom: 0;
}
#handsetList .promo-wrapper {
	float: left;
	_float: none;
	width: 100%;
	margin-bottom: 5px;
    margin-left: -7px;
}
#handsetList .promo {
	float: left;
	min-width: 185px;
	_width: auto;
	font-size: 0.916em;
	font-weight: bold;
	line-height: 1.5;    
	background: url("../images/promo-arrow.gif") no-repeat scroll top right #b80020;
	background-size: auto 100%;
	color: #fff;
	padding: 1px 20px 3px 15px;	
}
#handsetList .handset-wrapper {
	float: left;
	_float: none;
	width: 100%;
	_position: relative;
	padding: 0 0 21px 0;
	_padding: 0 0 21px 0;
	background: url("../images/row-shadow-right.jpg") no-repeat scroll bottom right transparent;	
}
#handsetList .handsetImg {
	float: left;
	width: 125px;
	padding: 0 0 9px 4px;
	_padding: 0 0 9px 0;
	background: url("../images/handset-shadow.png") no-repeat scroll bottom center transparent;
	_position: relative;		
}
#handsetList .handsetImg img {
	width: 100%;
	height: auto;
}
#handsetList .handsetDetails {
	padding: 0 4px 0 134px;
	_padding: 0 0 0 134px;
}
#handsetList h3 {
	margin-top: 7px;
}
#handsetList .pay-go, #handsetList .pay-mo {
	line-height: 1.3;
}
#handsetList .price {
	display: block;
	color: #0E7CB3;
}
#handsetList .outOfStock {
	color: #a9aeb4;
	display: block;
}
#handsetList .outOfStock span {
	color: #b0232a;
	display: inline-block;
	zoom:1; 
	*display: inline; 
}
#handsetList .delayedDelivery {
	display: block;
	color: #0E7CB3;
}
#handsetList .delayedDelivery span {
	color: #000;
	display: inline-block;
	zoom:1; 
	*display: inline; 
}
#handsetList .buttonRow {
	text-align: right;
	padding-top: 5px;
	*float: right;
	_position: relative;
}
#handsetList input {
	float: none;
	margin-bottom: 0;
}