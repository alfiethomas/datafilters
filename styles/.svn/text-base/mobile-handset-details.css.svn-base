/* handset carousel */
.handsetGallery .carousel-item {
	width: 150px;
	margin: 0 auto 10px auto;
	background: url("../images/handset-shadow.png") no-repeat scroll center bottom transparent;
	padding-bottom: 10px;
}
/* key handset feature list */ 
#keyFeatures {
	list-style-type: none;	
	margin: 0 7px 30px 14px;
}
#keyFeatures li {
	display: block;
	background: url("../images/bullet.gif") no-repeat scroll 0 6px transparent;
	padding-left: 10px;
	line-height: 1.2;
	color: #26225b;
	margin-bottom: 5px;
}
