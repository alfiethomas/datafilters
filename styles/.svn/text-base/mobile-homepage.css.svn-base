#homepage-menu-wrapper {
	width: 100%;
	_margin-bottom: 30px;
}
#homepage-menu {
	list-style: none;
	overflow: hidden;
	margin: 0 3px 30px 3px;	
}
#homepage-menu li {
	float: left;	
	margin: 0 3px 6px 3px;
}
#homepage-menu li a {
	color: #fff;
	display: block;
	width: 98px;
	height: 98px;
}
#homepage-menu li a span {
	display: block;
	padding: 7px;
}
#homepage-menu li a.phones {
	background: url("../images/homepage/thumbnail-phones.jpg") repeat-x;
}
